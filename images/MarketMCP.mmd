---
config:
  layout: dagre
  theme: default
---
classDiagram
    class MarketMCP {
        +get_market_bars(instruments: List, start: str, end: str) MarketData
        +get_current_prices(instruments: List) PriceMap
    }

    class MarketData {
        +bars: List~OHLCV~
        +count: int
    }
    class OHLCV {
        +timestamp: datetime
        +open: float
        +high: float
        +low: float
        +close: float
        +volume: int
    }
    class PriceMap {
        +prices: Map~Symbol, Price~
    }

    MarketMCP ..> MarketData : returns
    MarketMCP ..> PriceMap : returns
    MarketData *-- OHLCV